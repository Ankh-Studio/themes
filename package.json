{
  "name": "@ankh-studio/themes",
  "version": "0.1.0",
  "description": "Pre-composed CSS themes built on Ankh Studio design tokens",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Matthew Van Dusen",
    "url": "https://github.com/imagineux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ankh-Studio/themes.git"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "exports": {
    "./default.css": "./dist/default.css",
    "./blue.css": "./dist/blue.css",
    "./purple.css": "./dist/purple.css",
    "./reset.css": "./dist/reset.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "postcss 'src/*.css' --dir dist --base src",
    "clean": "rimraf dist",
    "lint": "stylelint 'src/**/*.css'"
  },
  "dependencies": {
    "@ankh-studio/tokens": "^0.5.8"
  },
  "devDependencies": {
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "rimraf": "^6.1.2",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^37.0.0"
  }
}
